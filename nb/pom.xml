        <dependency>
            <groupId>io.nosqlbench</groupId>
            <artifactId>activitytype-diag</artifactId>
            <version>3.12.48-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>io.nosqlbench</groupId>
            <artifactId>activitytype-tcp</artifactId>
            <version>3.12.48-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>io.nosqlbench</groupId>
