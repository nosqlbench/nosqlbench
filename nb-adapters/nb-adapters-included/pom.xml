                </dependency>
            </dependencies>
        </profile>

        <profile>
            <id>adapter-example-include</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>io.nosqlbench</groupId>
                    <artifactId>adapter-example</artifactId>
                    <version>${revision}</version>
                </dependency>
            </dependencies>
        </profile>

    </profiles>

</project>
